<ol>
<% @questions.each do |question| %>
  <li><a href="/questions/<%= question.id %>"><%= question.title %></a> (<%= question.answers.count %>
    <%if question.answers.count == 1%>
      answer,
    <% else %>
      answers,
    <%end%>
    <%= question.comments.count %>
    <%if question.comments.count == 1%>
      comment)
    <%else%>
    comments)
    <%end%>
  </li>
  <br>
<% end %>
</ol>
